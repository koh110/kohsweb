{
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom",
      "webworker"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "es2019",
    "jsx": "preserve",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "./typings"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
